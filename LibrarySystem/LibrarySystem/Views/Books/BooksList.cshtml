@model BooksDisplayViewModel;

@{
    ViewData["Title"] = "Books";
    string currentPage = ViewContext.HttpContext.Request.Path + ViewContext.HttpContext.Request.QueryString;
}
<div class="container py-4">
    <nav aria-label="breadcrumb" class="mt-2">
        <ol class="breadcrumb bg-dark text-light px-3 py-2 rounded">
            <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Home">Home</a></li>
            <li class="breadcrumb-item active" aria-current="page">Books</li>
        </ol>
    </nav>

    <div class="section-body shadow p-4">

        <h1 class="books-header mb-2">
            Discover Amazing Books
        </h1>
        <p class="lead mb-4">Explore and read books you like</p>

        <!-- Filter Buttons -->
        <div class="row mb-4">
            <div class="col text-center">
                <div class="btn-group" role="group" aria-label="Book Filters">
                    <a href="#" class="btn btn-primary active">Popular</a>
                    <a href="#" class="btn btn-success">Most Liked</a>
                    <a href="#" class="btn btn-info">Most Read</a>
                    <a href="#" class="btn btn-warning">Most Viewed</a>
                    <a href="#" class="btn btn-danger">Latest</a>
                </div>
            </div>
        </div>

        <!-- Search Bar -->
        <div class="row justify-content-center mb-5">
            <div class="col-md-6 col-lg-4">
                <input type="text" class="form-control search" placeholder="Search by name or ISBN number" />
            </div>
        </div>

        <!-- Book Cards -->
        <div class="row g-4">
            @foreach (Book book in Model.Books)
            {
                var (isContained, quantity) = Model.CartItemStatus.IsBookInCart(book.Id);
                <div class="col-12 col-md-6 col-sm-6 col-lg-3 d-flex">
                    <div class="card bg-dark text-white border-secondary shadow-sm flex-fill book-card h-100">
                        <a asp-action="BookDetails" asp-controller="Books" asp-route-id="@book.Id" asp-route-slug="@book.Slug">
                            <img class="card-img-top book-cover" src="@book.GetCoverPath()" alt="@book.BookTitle" />
                        </a>
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title text-truncate" title="@book.BookTitle">
                                <a asp-action="BookDetails" asp-controller="Books" asp-route-id="@book.Id" class="text-white">@book.BookTitle</a>
                            </h5>
                            <p class="card-text small text-secondary mb-2">@book.GetAuthorsString()</p>
                            <div class="mt-auto buttons">
                                <div id="@Model.CartItemStatus.GenerateUniqueIdentifier(book.Id, true)" class="@(isContained ? "add-cart-hidden" : "")">
                                    <form method="post" class="form" asp-controller="Cart" asp-action="AddToCart">
                                        <div class="hidden-fields">
                                            <input type="hidden" name="CartItem.BookID" value="@book.Id" />
                                            <input type="hidden" name="CartItem.Price" value="@book.Price" />
                                            <input type="hidden" name="CartItem.Quantity" value="1" />
                                            <input type="hidden" name="PageWhereItemWasAdded" value="@currentPage" />
                                        </div>
                                        <div class="shown-section">
                                            <button class="ajax-cart-btn btn button-blue button-stretch-width"
                                                    type="button"
                                                    data-origin="@Model.CartItemStatus.GenerateUniqueIdentifier(book.Id, true)"
                                                    data-complementary="@Model.CartItemStatus.GenerateUniqueIdentifier(book.Id, false)">
                                                Add to cart
                                            </button>
                                        </div>
                                    </form>
                                </div>
                                <div id="@Model.CartItemStatus.GenerateUniqueIdentifier(book.Id, false)" class="buttons qty-input-group mt-2 row @(isContained ? "" : "qty-hidden")">
                                    <div class="col-12 col-lg-6 mb-2 mb-md-0">
                                        <div class="input-group qty-input w-100 justify-content-center">
                                            <button class="btn btn-outline-secondary qty-count qty-count--minus w-25" data-action="minus" data-id="@book.Id" type="button">-</button>
                                            <input class="form-control text-center product-qty w-50" type="number" name="product-qty" data-id="@book.Id" min="0" max="10" value="@(isContained? quantity : 1)" style="max-width:60px;">
                                            <button class="btn btn-outline-secondary qty-count qty-count--add w-25" data-action="add" data-id="@book.Id" type="button">+</button>
                                        </div>
                                    </div>
                                    <div class="col-12 col-lg-6">
                                        <button data-id="@book.Id"
                                                data-origin="@Model.CartItemStatus.GenerateUniqueIdentifier(book.Id, false)"
                                                class="btn btn-danger ms-2 remove-from-cart w-100"
                                                data-complementary="@Model.CartItemStatus.GenerateUniqueIdentifier(book.Id, true)">
                                            Remove
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

        <!-- Paging Placeholder -->
        <div class="d-flex justify-content-center mt-5">
            <div page-model="Model.PagingInfomation"
                 action="List"
                 is-css-enabled="true"
                 selected-page-class="btn-primary"
                 un-selected-page-class="btn-outline-primary"
                 common-page-class="btn"
                 class="pagination"></div>
        </div>
    </div>
</div>