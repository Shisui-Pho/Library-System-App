@{
    ViewData["Title"] = "Home";
}
<!-- Main Header -->
<div id="main-header" class="bg-primary text-white py-5 container-fluid">
    <div class="header-content text-center">
        <h1 class="display-4">Welcome to the Explorer Library</h1>
        <p class="lead">Designed for your convenience – access and manage resources anytime, anywhere.</p>

        <div class="button-container">
            <a href="#" class="button-text-centered button-medium button-blue">
                Search
            </a>
            <a href="#" class="button-text-centered button-medium button-green">
                Register
            </a>
        </div>
    </div>
</div>

<div class="container-fluid py-5 bg-secondary-subtle section-body">

    <!-- Special Message Section -->
    <section id="special-message" class="text-center mb-5">
        <p class="lead">
            Specially designed for schools, colleges, organizations, and home libraries – including personal collections. Loved by librarians across the world, our system makes managing books, searching, borrowing, and reading easier.
        </p>
    </section>

    <!-- Features Section (3 Columns) -->
    <section id="features" class="mb-5">
        <div class="row text-center">
            <div class="col-md-4">
                <h3>Search Books</h3>
                <p>Find books in various genres, authors, or titles with ease.</p>
                <a href="#" class="btn btn-primary">Search Now</a>
            </div>
            <div class="col-md-4">
                <h3>Read Books Online</h3>
                <p>Access online versions of books for reading at your convenience.</p>
                <a href="#" class="btn btn-primary">Read Now</a>
            </div>
            <div class="col-md-4">
                <h3>Borrow Books</h3>
                <p>Request to borrow books from the library collection.</p>
                <a href="#" class="btn btn-primary">Borrow Now</a>
            </div>
        </div>
    </section>

    <section id="benefits" class="text-center mb-5">
        <h2>Why Choose Our Library System?</h2>
        <div class="row">
            <div class="col-md-4">
                <h4>Convenient Access</h4>
                <p>Access our collection anytime, anywhere—whether you're at home, in school, or at work.</p>
            </div>
            <div class="col-md-4">
                <h4>Easy Book Management</h4>
                <p>Easily manage your borrowed books, request new ones, and track your reading history.</p>
            </div>
            <div class="col-md-4">
                <h4>Improved User Experience</h4>
                <p>Our user-friendly interface makes searching, borrowing, and reading books seamless and quick.</p>
            </div>
        </div>
    </section>
</div>