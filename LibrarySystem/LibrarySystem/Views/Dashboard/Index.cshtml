@model AdminStaffDashboardViewModel
@{
    ViewData["Title"] = "Dashboard";
}

<div class="container py-4">
    <!-- Dashboard Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="mb-0">
                <i class="fas @(Model.IsAdmin ? "fa-user-shield" : "fa-user-tie") me-2"></i>
                @(Model.IsAdmin ? "Admin Dashboard" : "Staff Dashboard")
            </h2>
            <p class="muted-text mb-0">Welcome back, @Model.Name! Here's your system overview.</p>
        </div>
        <div class="d-flex gap-2">
            <button class="btn btn-outline-light">
                <i class="fas fa-sync-alt me-1"></i> Refresh
            </button>
            <div class="dropdown">
                <button class="btn btn-outline-light dropdown-toggle" type="button" id="quickActionsDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                    <i class="fas fa-bolt me-1"></i> Quick Actions
                </button>
                <ul class="dropdown-menu dropdown-menu-dark" aria-labelledby="quickActionsDropdown">
                    <li><a class="dropdown-item" href="#"><i class="fas fa-plus me-2"></i> Add New Book</a></li>
                    <li><a class="dropdown-item" href="#"><i class="fas fa-user-plus me-2"></i> Create User</a></li>
                    <li><a class="dropdown-item" href="#"><i class="fas fa-truck me-2"></i> Process Orders</a></li>
                    <li><a class="dropdown-item" href="#"><i class="fas fa-file-invoice me-2"></i> Generate Report</a></li>
                </ul>
            </div>
        </div>
    </div>

    <!-- Admin Controls at the Top -->
    @if (Model.IsAdmin)
    {
        <div class="card text-bg-dark border-primary mb-5">
            <div class="card-header bg-primary bg-opacity-25">
                <h5 class="mb-0"><i class="fas fa-user-shield me-2"></i>Admin Controls</h5>
            </div>
            <div class="card-body">
                <div class="d-flex flex-wrap gap-3">
                    <a href="#" class="btn btn-outline-light d-flex align-items-center">
                        <i class="fas fa-users-cog me-2"></i>
                        <div>
                            <div class="fw-bold">User Management</div>
                            <div class="small muted-text">Manage system users</div>
                        </div>
                    </a>
                    <a href="#" class="btn btn-outline-light d-flex align-items-center">
                        <i class="fas fa-sliders-h me-2"></i>
                        <div>
                            <div class="fw-bold">System Settings</div>
                            <div class="small muted-text">Configure application</div>
                        </div>
                    </a>
                    <a href="#" class="btn btn-outline-light d-flex align-items-center">
                        <i class="fas fa-database me-2"></i>
                        <div>
                            <div class="fw-bold">Database</div>
                            <div class="small muted-text">Backup & restore</div>
                        </div>
                    </a>
                    <a href="#" class="btn btn-outline-light d-flex align-items-center">
                        <i class="fas fa-chart-line me-2"></i>
                        <div>
                            <div class="fw-bold">Analytics</div>
                            <div class="small muted-text">View usage stats</div>
                        </div>
                    </a>
                    <a href="#" class="btn btn-outline-light d-flex align-items-center">
                        <i class="fas fa-file-export me-2"></i>
                        <div>
                            <div class="fw-bold">Export Data</div>
                            <div class="small muted-text">Export to CSV/Excel</div>
                        </div>
                    </a>
                    <a href="#" class="btn btn-outline-light d-flex align-items-center">
                        <i class="fas fa-tasks me-2"></i>
                        <div>
                            <div class="fw-bold">Audit Logs</div>
                            <div class="small muted-text">View activity history</div>
                        </div>
                    </a>
                </div>
            </div>
        </div>
    }

    <!-- Stats Overview -->
    <div class="row mb-4">
        <div class="col-md-3 mb-3">
            <div class="card text-bg-dark border-secondary h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-uppercase muted-text small mb-1">Total Books</h6>
                            <h3 class="mb-0">@Model.TotalBooks</h3>
                        </div>
                        <div class="icon-circle bg-primary">
                            <i class="fas fa-book"></i>
                        </div>
                    </div>
                    <div class="mt-3">
                        <span class="text-success small">
                            <i class="fas fa-arrow-up me-1"></i> @Model.NewBooksThisWeek new this week
                        </span>
                    </div>
                </div>
                <div class="card-footer bg-dark border-top border-secondary py-2">
                    <a href="#" class="small text-decoration-none d-flex align-items-center">
                        <i class="fas fa-eye me-1"></i> View inventory
                        <i class="fas fa-chevron-right ms-auto"></i>
                    </a>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="card text-bg-dark border-secondary h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-uppercase muted-text small mb-1">Pending Orders</h6>
                            <h3 class="mb-0">@Model.NumberOfPendingOrders</h3>
                        </div>
                        <div class="icon-circle bg-warning">
                            <i class="fas fa-shopping-cart"></i>
                        </div>
                    </div>
                    <div class="mt-3">
                        <span class="text-danger small">
                            <i class="fas fa-exclamation-circle me-1"></i> @Model.NumberOfOrdersThatNeedAttention need attention
                        </span>
                    </div>
                </div>
                <div class="card-footer bg-dark border-top border-secondary py-2">
                    <a href="#" class="small text-decoration-none d-flex align-items-center">
                        <i class="fas fa-clipboard-list me-1"></i> View orders
                        <i class="fas fa-chevron-right ms-auto"></i>
                    </a>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="card text-bg-dark border-secondary h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-uppercase muted-text small mb-1">Total Revenue</h6>
                            <h3 class="mb-0">@Model.TotalRevenue.ToString("C2")</h3>
                        </div>
                        <div class="icon-circle bg-success">
                            <i class="fas fa-money-bills"></i>
                        </div>
                    </div>
                    <div class="mt-3">
                        <span class="text-success small">
                            <i class="fas fa-arrow-up me-1"></i> @Model.PercentageGrowth% growth
                        </span>
                    </div>
                </div>
                <div class="card-footer bg-dark border-top border-secondary py-2">
                    <a href="#" class="small text-decoration-none d-flex align-items-center">
                        <i class="fas fa-chart-line me-1"></i> View reports
                        <i class="fas fa-chevron-right ms-auto"></i>
                    </a>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="card text-bg-dark border-secondary h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-uppercase muted-text small mb-1">Active Users</h6>
                            <h3 class="mb-0">@Model.NumberOfActiveUsers</h3>
                        </div>
                        <div class="icon-circle bg-info">
                            <i class="fas fa-users"></i>
                        </div>
                    </div>
                    <div class="mt-3">
                        <span class="text-success small">
                            <i class="fas fa-user-plus me-1"></i> @Model.NumberOfNewUsers new users
                        </span>
                    </div>
                </div>
                <div class="card-footer bg-dark border-top border-secondary py-2">
                    <a href="#" class="small text-decoration-none d-flex align-items-center">
                        <i class="fas fa-user-friends me-1"></i> View users
                        <i class="fas fa-chevron-right ms-auto"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <!-- Left Column -->
        <div class="col-lg-8">
            <!-- Orders and Alerts -->
            <div class="row">
                <div class="col-md-12 mb-4">
                    <div class="card text-bg-dark border-secondary h-100">
                        <div class="card-header d-flex justify-content-between align-items-center">
                            <h5 class="mb-0"><i class="fas fa-shopping-cart me-2"></i>Recent Orders</h5>
                            <div class="d-flex gap-2">
                                <div class="dropdown">
                                    <button class="btn btn-sm btn-outline-light dropdown-toggle" type="button" id="ordersFilter" data-bs-toggle="dropdown" aria-expanded="false">
                                        <i class="fas fa-filter me-1"></i>Filter
                                    </button>
                                    <ul class="dropdown-menu dropdown-menu-dark" aria-labelledby="ordersFilter">
                                        <li><a class="dropdown-item active" href="#">All Orders</a></li>
                                        <li><a class="dropdown-item" href="#">Pending</a></li>
                                        <li><a class="dropdown-item" href="#">Processing</a></li>
                                        <li><a class="dropdown-item" href="#">Completed</a></li>
                                        <li><a class="dropdown-item" href="#">Cancelled</a></li>
                                    </ul>
                                </div>
                                <a href="#" class="btn btn-sm btn-outline-light">View All</a>
                            </div>
                        </div>
                        <div class="card-body p-0">
                            <div class="table-responsive">
                                <table class="table table-dark table-hover align-middle mb-0">
                                    <thead class="table-secondary">
                                        <tr>
                                            <th>Order #</th>
                                            <th>Customer</th>
                                            <th>Date</th>
                                            <th>Amount</th>
                                            <th>Status</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach(var order in Model.RecentOrders)
                                        {
                                            <tr>
                                                <td>Order number goes here</td>
                                                <td>@(order.User.FirstName + " " + @order.User.LastName)</td>
                                                <td>@order.CreatedAt.ToString("dd MMM yyyy")</td>
                                                <td>@order.TotalPrice.ToString("C2")</td>
                                                @switch(order.Status)
                                                {
                                                    case BookOrderStatus.Pending:
                                                        <td><span class="badge bg-primary">Pending</span></td>
                                                        <td>
                                                            <div class="dropdown">
                                                                <button class="btn btn-sm btn-outline-light dropdown-toggle" type="button" id="actionDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                                                                    Actions
                                                                </button>
                                                                <ul class="dropdown-menu dropdown-menu-dark" aria-labelledby="actionDropdown">
                                                                    <li><a class="dropdown-item" href="#"><i class="fas fa-eye me-2"></i> View</a></li>
                                                                    <li><a class="dropdown-item" href="#"><i class="fas fa-edit me-2"></i> Edit</a></li>
                                                                    <li><a class="dropdown-item" href="#"><i class="fas fa-gear me-2"></i> Process</a></li>
                                                                </ul>
                                                            </div>
                                                        </td>
                                                        break;
                                                    case BookOrderStatus.Processing:
                                                        <td><span class="badge bg-warning text-dark">Processing</span></td>
                                                        <td>
                                                            <div class="dropdown">
                                                                <button class="btn btn-sm btn-outline-light dropdown-toggle" type="button" id="actionDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                                                                    Actions
                                                                </button>
                                                                <ul class="dropdown-menu dropdown-menu-dark" aria-labelledby="actionDropdown">
                                                                    <li><a class="dropdown-item" href="#"><i class="fas fa-eye me-2"></i> View</a></li>
                                                                    <li><a class="dropdown-item" href="#"><i class="fas fa-edit me-2"></i> Edit</a></li>
                                                                    <li><a class="dropdown-item" href="#"><i class="fas fa-truck me-2"></i> Ship</a></li>
                                                                </ul>
                                                            </div>
                                                        </td>

                                                        break;
                                                    case BookOrderStatus.Delivered:
                                                        <td><span class="badge bg-success">Delivered</span></td>
                                                        <td>
                                                            <div class="dropdown">
                                                                <button class="btn btn-sm btn-outline-light dropdown-toggle" type="button" id="actionDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                                                                    Actions
                                                                </button>
                                                                <ul class="dropdown-menu dropdown-menu-dark" aria-labelledby="actionDropdown">
                                                                    <li><a class="dropdown-item" href="#"><i class="fas fa-eye me-2"></i> View</a></li>
                                                                    <li><a class="dropdown-item" href="#"><i class="fas fa-file-invoice me-2"></i> Invoice</a></li>
                                                                </ul>
                                                            </div>
                                                        </td>
                                                        break;
                                                    case BookOrderStatus.Cancelled:
                                                        <td><span class="badge bg-danger">Cancelled</span></td>
                                                        <td>
                                                            <a href="#" class="btn btn-sm btn-outline-light">
                                                                <i class="fas fa-eye me-1"></i> View
                                                            </a>
                                                        </td>
                                                        break;
                                                    case BookOrderStatus.Shipped:
                                                        <td><span class="badge bg-info">Shipped</span></td>
                                                        <td>
                                                            <div class="dropdown">
                                                                <button class="btn btn-sm btn-outline-light dropdown-toggle" type="button" id="actionDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                                                                    Actions
                                                                </button>
                                                                <ul class="dropdown-menu dropdown-menu-dark" aria-labelledby="actionDropdown">
                                                                    <li><a class="dropdown-item" href="#"><i class="fas fa-eye me-2"></i> View</a></li>
                                                                    <li><a class="dropdown-item" href="#"><i class="fas fa-file-invoice me-2"></i> Invoice</a></li>
                                                                    <li><a class="dropdown-item" href="#"><i class="fas fa-location me-2"></i> Track</a></li>
                                                                </ul>
                                                            </div>
                                                        </td>
                                                        break;
                                                }
    
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- System Alerts and Activity -->
            <div class="row">
                <div class="col-md-6 mb-4">
                    <div class="card text-bg-dark border-secondary h-100">
                        <div class="card-header d-flex justify-content-between align-items-center">
                            <h5 class="mb-0"><i class="fas fa-bell me-2"></i>System Alerts</h5>
                            <div class="form-check form-switch">
                                <input class="form-check-input" type="checkbox" id="alertsToggle" checked>
                                <label class="form-check-label small" for="alertsToggle">Active</label>
                            </div>
                        </div>
                        <div class="card-body">

                            @foreach (var alert in Model.SystemAlerts)
                            {
                                var (alertClass, alertShape) = GetAlertClass(alert.SeverityLevel);
                                <div class="alert @alertClass d-flex align-items-center mb-3">
                                    <i class="fas @alertShape fa-lg me-3"></i>
                                    <div>
                                        <h6 class="mb-1">@alert.Title</h6>
                                        <p class="mb-0">@alert.Description</p>
                                    </div>
                                    <button class="btn btn-sm btn-outline-dark ms-auto">Resolve</button>
                                </div>
                            }
                        </div>
                    </div>
                </div>

                <div class="col-md-6 mb-4">
                    <div class="card text-bg-dark border-secondary h-100">
                        <div class="card-header">
                            <h5 class="mb-0"><i class="fas fa-list me-2"></i>Recent Activity</h5>
                        </div>
                        <div class="card-body p-0">
                            <ul class="list-group list-group-flush">
                                <li class="list-group-item bg-transparent text-light border-secondary">
                                    <div class="d-flex">
                                        <div class="flex-shrink-0">
                                            <i class="fas fa-book text-primary"></i>
                                        </div>
                                        <div class="flex-grow-1 ms-3">
                                            <p class="mb-0">New book "The Midnight Library" added</p>
                                            <small class="muted-text">2 minutes ago</small>
                                        </div>
                                    </div>
                                </li>
                                <li class="list-group-item bg-transparent text-light border-secondary">
                                    <div class="d-flex">
                                        <div class="flex-shrink-0">
                                            <i class="fas fa-shopping-cart text-success"></i>
                                        </div>
                                        <div class="flex-grow-1 ms-3">
                                            <p class="mb-0">New order #ORD-00125 placed</p>
                                            <small class="muted-text">15 minutes ago</small>
                                        </div>
                                    </div>
                                </li>
                                <li class="list-group-item bg-transparent text-light border-secondary">
                                    <div class="d-flex">
                                        <div class="flex-shrink-0">
                                            <i class="fas fa-user text-info"></i>
                                        </div>
                                        <div class="flex-grow-1 ms-3">
                                            <p class="mb-0">User profile updated</p>
                                            <small class="muted-text">1 hour ago</small>
                                        </div>
                                    </div>
                                </li>
                                <li class="list-group-item bg-transparent text-light border-secondary">
                                    <div class="d-flex">
                                        <div class="flex-shrink-0">
                                            <i class="fas fa-exclamation-circle text-warning"></i>
                                        </div>
                                        <div class="flex-grow-1 ms-3">
                                            <p class="mb-0">5 pending requests</p>
                                            <small class="muted-text">2 hours ago</small>
                                        </div>
                                    </div>
                                </li>
                                <li class="list-group-item bg-transparent text-light border-secondary">
                                    <div class="d-flex">
                                        <div class="flex-shrink-0">
                                            <i class="fas fa-truck text-primary"></i>
                                        </div>
                                        <div class="flex-grow-1 ms-3">
                                            <p class="mb-0">Order #ORD-00120 shipped</p>
                                            <small class="muted-text">5 hours ago</small>
                                        </div>
                                    </div>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Right Column -->
        <div class="col-lg-4">
            <!-- Quick Stats -->
            <div class="card text-bg-dark border-secondary mb-4">
                <div class="card-header">
                    <h5 class="mb-0"><i class="fas fa-chart-pie me-2"></i>Quick Stats</h5>
                </div>
                <div class="card-body">
                    <div class="mb-4">
                        <h6 class="small text-uppercase muted-text mb-2">Orders by Status</h6>
                        <div class="d-flex flex-wrap gap-2 mb-3">
                            <span class="badge bg-primary">Pending: @Model.NumberOfPendingOrders</span>
                            <span class="badge bg-info">Processing: @Model.NumberOfOrdersBeingProcessed</span>
                            <span class="badge bg-success">Completed: @Model.NumberOfShippedOrders</span>
                            <span class="badge bg-danger">Cancelled: @Model.NumberOfCancelledOrders</span>
                        </div>
                    </div>

                    <div class="mb-4">
                        <h6 class="small text-uppercase muted-text mb-2">Top Genres</h6>
                        <div class="d-flex align-items-center mb-2">
                            <div class="progress flex-grow-1" style="height: 10px;">
                                <div class="progress-bar bg-success" role="progressbar" style="width: 30%;" aria-valuenow="30" aria-valuemin="0" aria-valuemax="100"></div>
                            </div>
                            <div class="ms-2 small">30%</div>
                        </div>
                        <div class="d-flex justify-content-between small mb-3">
                            <span>Science Fiction</span>
                        </div>

                        <div class="d-flex align-items-center mb-2">
                            <div class="progress flex-grow-1" style="height: 10px;">
                                <div class="progress-bar bg-info" role="progressbar" style="width: 25%;" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
                            </div>
                            <div class="ms-2 small">25%</div>
                        </div>
                        <div class="d-flex justify-content-between small mb-3">
                            <span>Mystery</span>
                        </div>

                        <div class="d-flex align-items-center mb-2">
                            <div class="progress flex-grow-1" style="height: 10px;">
                                <div class="progress-bar bg-warning" role="progressbar" style="width: 20%;" aria-valuenow="20" aria-valuemin="0" aria-valuemax="100"></div>
                            </div>
                            <div class="ms-2 small">20%</div>
                        </div>
                        <div class="d-flex justify-content-between small">
                            <span>Romance</span>
